<div align="center">

  <%= render 'messages' %>

  <%= simple_form_for @submission, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <%= f.input :name, :required => true %>
    </div>

    <%= f.input :business_name, :required => true %>
    <%= f.input :telephone_number, :required => true %>
    <%= f.input :email %>
    <%= f.input :notes %>
    <%= f.input :reference %>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>